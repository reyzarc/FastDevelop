<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--滑动返回自定义属性-->
    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension"/>
        <attr name="edge_flag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadow_left" format="reference"/>
        <attr name="shadow_right" format="reference"/>
        <attr name="shadow_bottom" format="reference"/>
    </declare-styleable>

    <!--格式化edittext自定义属性-->
    <declare-styleable name="FormatEditText">
        <!--格式化类型,电话/银行卡-->
        <attr name="formatType">
            <enum name="phoneNum" value="1"/>
            <enum name="cardNum" value="2"/>
        </attr>
        <!--是否开启一键清除数据-->
        <attr name="openOneKeyClear" format="boolean"/>
        <!--是否开启格式化-->
        <attr name="openFormat" format="boolean"/>
    </declare-styleable>

    <!--多种状态布局view-->
    <declare-styleable name="MultiStateView">
        <attr name="msv_loadingView" format="reference" />
        <attr name="msv_emptyView" format="reference" />
        <attr name="msv_errorView" format="reference" />
        <attr name="msv_viewState" format="enum">
            <enum name="content" value="0" />
            <enum name="error" value="1" />
            <enum name="empty" value="2" />
            <enum name="loading" value="3" />
        </attr>
        <attr name="msv_animateViewChanges" format="boolean" />
    </declare-styleable>

    <!--圆形进度条style-->
    <declare-styleable name="ProgressWheel">
        <attr name="pwText" format="string" />
        <attr name="pwTextColor" format="color" />
        <attr name="pwTextSize" format="dimension" />
        <attr name="pwBarColor" format="color" />
        <attr name="pwRimColor" format="color" />
        <attr name="pwRimWidth" format="dimension" />
        <attr name="pwSpinSpeed" format="dimension" />
        <attr name="pwDelayMillis" format="integer" />
        <attr name="pwCircleColor" format="color" />
        <attr name="pwRadius" format="dimension" />
        <attr name="pwBarWidth" format="dimension" />
        <attr name="pwBarLength" format="dimension" />
        <attr name="pwContourColor" format="color"/>
        <attr name="pwContourSize" format="dimension"/>
    </declare-styleable>

    <!--圆环进度-->
    <declare-styleable name="CircularProgressBar">
        <attr name="cpb_progress" format="integer" />
        <attr name="cpb_progressbar_color" format="color" />
        <attr name="cpb_background_progressbar_color" format="color" />
        <attr name="cpb_progressbar_width" format="dimension" />
        <attr name="cpb_background_progressbar_width" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="Topbar">
        <attr name="topbar_height" format="dimension"/>
        <attr name="topbar_color" format="color"/>
        <attr name="back_enable" format="boolean"/>
        <attr name="left_icon" format="reference"/>
        <attr name="right_icon" format="reference"/>
        <attr name="topbar_transparent" format="boolean"/>
        <attr name="left_text" format="string"/>
        <attr name="right_text" format="string"/>
        <attr name="title" format="string"/>
        <attr name="title_color" format="color"/>
    </declare-styleable>


    <attr name="SwipeBackLayoutStyle" format="reference"/>

    <declare-styleable name="ArcView">
        <attr name="arc_height" format="dimension"/>
        <attr name="background_color" format="color"/>
    </declare-styleable>

    <!-- PagerSlidingTabStrip attr -->
    <declare-styleable name="PagerSlidingTabStrip">

        <!-- 指示器的颜色 -->
        <attr name="pstsIndicatorColor" format="color" />
        <!-- Tab下划线的颜色 -->
        <attr name="pstsUnderlineColor" format="color" />
        <!-- tab之间分割线的颜色 -->
        <attr name="pstsDividerColor" format="color" />
        <!-- 实施期的高度 -->
        <attr name="pstsIndicatorHeight" format="dimension" />
        <!--指示器宽度-->
        <attr name="pstsDividerWidth" format="dimension" />
        <!-- tab下划线的高度 -->
        <attr name="pstsUnderlineHeight" format="dimension" />
        <!-- tab分割线的间距 -->
        <attr name="pstsDividerPadding" format="dimension" />
        <attr name="pstsTabPaddingLeftRight" format="dimension" />
        <attr name="pstsScrollOffset" format="dimension" />
        <attr name="pstsTabBackground" format="reference" />
        <attr name="pstsShouldExpand" format="boolean" />
        <attr name="pstsTextAllCaps" format="boolean" />
        <attr name="pstsTextClick" format="boolean" />
        <attr name="pstsSelectedTabTextColor" format="color" />
        <attr name="pstsUserIndicatorTextWidth" format="boolean" />
        <attr name="pstsPaddingMiddle" format="boolean" />
        <attr name="pstsTextStyle" format="reference" />
        <attr name="pstsTextSelectedStyle" format="reference" />
        <attr name="pstsTextAlpha" format="float" />
        <attr name="pstsTextSelectedAlpha" format="float" />
        <!-- Color of regular titles. -->
        <attr name="android:textColor" />
        <!-- Size of title text. -->
        <attr name="android:textSize" />
    </declare-styleable>
</resources>