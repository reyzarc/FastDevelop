<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.xtec.timeline.widget.Topbar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:back_enable="true"
        app:title="xml仅标题"
        app:topbar_color="@color/black"/>

    <com.xtec.timeline.widget.Topbar
        android:id="@+id/topbar2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:back_enable="false"
        app:title="xml标题与颜色"
        app:title_color="@color/black"
        app:topbar_color="@color/colorPrimary"
        app:right_icon="@drawable/ic_launcher"/>
    <com.xtec.timeline.widget.Topbar
        android:id="@+id/topbar3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:back_enable="false"
        app:topbar_transparent="true"
        app:topbar_color="@color/colorPrimary"
        app:right_icon="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/tv_before"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="测试数据"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_after"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="排序结果"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_after_bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="排序结果"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"/>
</LinearLayout>