<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root_view">
    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <View
        android:id="@+id/main_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimary"/>
    <RadioGroup
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/main_rb_footprint"
            style="@style/main_radioButton_style"
            android:text="主页"
            android:drawableTop="@drawable/tab_footprint_selector"/>
        <RadioButton
            android:id="@+id/main_rb_message"
            style="@style/main_radioButton_style"
            android:drawableTop="@drawable/tab_message_selector"
            android:text="消息"/>

        <RadioButton
            android:id="@+id/main_rb_friends"
            style="@style/main_radioButton_style"
            android:drawableTop="@drawable/tab_friends_selector"
            android:text="朋友"/>

        <RadioButton
            android:id="@+id/main_rb_more"
            style="@style/main_radioButton_style"
            android:drawableTop="@drawable/tab_more_selector"
            android:text="更多"/>
    </RadioGroup>

</LinearLayout>
